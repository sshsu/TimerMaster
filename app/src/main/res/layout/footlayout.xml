<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@drawable/group_buton_nomal"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="168dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/CurrentUsedTimeTittle"
                    android:layout_width="51dp"
                    android:layout_height="wrap_content"
                    android:text="now: " />

                <TextView
                    android:id="@+id/CurrentUsedTime"
                    android:layout_width="98dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="00:00:00" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/AllUsedTimeTittle"
                    android:layout_width="51dp"
                    android:layout_height="wrap_content"
                    android:text="sum: " />

                <TextView
                    android:id="@+id/AllUsedTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="00:00:00" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/FreeTimeTittle"
                    android:layout_width="51dp"
                    android:layout_height="wrap_content"
                    android:text="rest: " />

                <TextView
                    android:id="@+id/FreeTimeTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="00:00:00" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="243dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

        </LinearLayout>

    </RadioGroup>
</LinearLayout>